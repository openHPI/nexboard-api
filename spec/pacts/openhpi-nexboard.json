{
  "consumer": {
    "name": "OpenHPI"
  },
  "provider": {
    "name": "nexboard"
  },
  "interactions": [
    {
      "description": "a request to get all projects",
      "providerState": "user has valid credentials and some projects exist",
      "request": {
        "method": "get",
        "path": "/projects",
        "query": "token=OpenHPIAPIKey&userId=__user_id__"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": [
          {
            "id": 10001,
            "title": "Project1"
          },
          {
            "id": 10002,
            "title": "Project2"
          }
        ]
      }
    },
    {
      "description": "a request to create a project",
      "providerState": "user has valid credentials",
      "request": {
        "method": "post",
        "path": "/projects",
        "headers": {
          "Content-Type": "application/json"
        },
        "query": "token=OpenHPIAPIKey",
        "body": {
          "title": "A new project",
          "description": "This is a new project",
          "user_id": "__user_id__"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "description": "This is a new project",
          "title": "A new project"
        }
      }
    },
    {
      "description": "a request to get boards of a project",
      "providerState": "user has valid credentials and an existing project with boards",
      "request": {
        "method": "get",
        "path": "/projects/10001/boards",
        "query": "token=OpenHPIAPIKey&userId=__user_id__"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": [
          {
            "description": "This is a great Board",
            "title": "A board"
          }
        ]
      }
    },
    {
      "description": "a request to create a board",
      "providerState": "user has valid credentials and an existing project",
      "request": {
        "method": "post",
        "path": "/boards",
        "headers": {
          "Content-Type": "application/json"
        },
        "query": "token=OpenHPIAPIKey",
        "body": {
          "title": "New Board",
          "description": "This is a new Board",
          "project_id": 10001,
          "user_id": "__user_id__"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "description": "This is a new Board",
          "title": "New Board"
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}